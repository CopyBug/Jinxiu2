<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">

    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:background="#2E69B0"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:layout_marginTop="50dp"
            android:layout_gravity="right"
            android:paddingLeft="10dp"
            android:drawableLeft="@drawable/icon_home"
            android:text="@string/discovery_data_return"
            android:textColor="@color/discovery_text"
            android:background="@drawable/bg_discovery_retun"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"></Button>
        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

        <FrameLayout
            android:paddingTop="@dimen/themmargin"
            android:background="@drawable/bg_discory_top"
            android:paddingLeft="10dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="300dp"
           >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/discovery_img"
                        xmlns:circleimageview="http://schemas.android.com/apk/res-auto"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:src="@drawable/ic_error"
                        android:layout_marginLeft="5dp"
                        android:gravity="center_vertical"
                        circleimageview:civ_border_overlay="false"
                        />
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:textSize="@dimen/NumberTwo"
                            android:textColor="@color/white"
                            android:text="神奇的精修美女"></TextView>
                        <TextView
                            android:background="@drawable/bg_discovery_lv"
                            android:layout_height="wrap_content"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:layout_width="wrap_content"
                            android:gravity="center_vertical"
                            android:textSize="@dimen/NumberTwo"
                            android:textColor="@color/white"
                            android:text="LV.5"></TextView>

                    </LinearLayout>

                </LinearLayout>

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:gravity="center_vertical"
               android:orientation="vertical">
               <LinearLayout
                   android:layout_marginBottom="20dp"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:gravity="center_vertical"
                   android:orientation="horizontal">
                   <SeekBar
                       android:layout_width="0dp"
                       android:layout_weight="1"
                       android:layout_height="wrap_content"
                       style="@style/CustomSeekbarStyle"
                       />
                   <TextView
                    android:layout_marginRight="20dp"
                       android:layout_width="wrap_content"
                       android:layout_height="40dp"
                       android:gravity="center"
                       android:textSize="@dimen/themmargin"
                       android:textColor="@color/white"
                       android:text="520/720"></TextView>

               </LinearLayout>
               <LinearLayout

                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:gravity="center_vertical"
                   android:orientation="horizontal">
                   <androidx.appcompat.widget.AppCompatImageView

                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       app:srcCompat="@drawable/icon_notice"/>
                   <TextView
                       android:paddingLeft="10dp"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:textSize="@dimen/themmargin"
                       android:text="组队背词,一起精修吧！"
                       android:textColor="@color/white"></TextView>
               </LinearLayout>
           </LinearLayout>
            </LinearLayout>


            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right|bottom"
                android:layout_marginRight="30dp"
                android:layout_marginBottom="10dp"
                app:srcCompat="@drawable/icon_discovery_shop"
                />
            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="20dp"
                android:layout_gravity="center"
                app:srcCompat="@drawable/icon_discovery_star"
                />
            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="50dp"
                android:layout_marginLeft="20dp"
                android:layout_gravity="center"
                app:srcCompat="@drawable/icon_discovery_small_star"
                />
        </FrameLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:orientation="vertical"
        android:background="@drawable/bg_discovery_below">
    <com.google.android.material.tabs.TabLayout
        android:paddingLeft="20dp"
        android:id="@+id/discovery_tab"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        app:tabMode="scrollable"
        android:layout_height="wrap_content"/>
<androidx.viewpager.widget.ViewPager
   android:paddingBottom="30dp"
    android:paddingLeft="20dp"
    android:id="@+id/discovery_page"
    android:layout_width="match_parent"
    android:layout_height="match_parent"/>

    </LinearLayout>
<LinearLayout

    android:paddingLeft="30dp"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="@drawable/icon_discovery_botton"
    android:orientation="horizontal">

    <androidx.appcompat.widget.AppCompatImageView
        android:src="@drawable/icon_medal"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"/>
    <TextView
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"
        android:textSize="@dimen/NumberTwo"
        android:text="我的本周排名21名"
        android:textColor="@color/white"
        />
    <TextView
        android:textSize="@dimen/NumberTwo"
        android:layout_width="wrap_content"
        android:textColor="@color/white"
        android:layout_marginRight="20dp"
        android:text="298"
        android:gravity="center"
        android:layout_height="match_parent"/>
</LinearLayout>
</LinearLayout>
    </androidx.core.widget.NestedScrollView>
    </FrameLayout>
</layout>
